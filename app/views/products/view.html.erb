<%= link_to "Home", root_path %>
<%= link_to "List of Products", products_list_path %>
<div class="bigcontainer">
  <div class="view_img">
    <%= image_tag @product.img_file %>
  </div>
    <div class="specs">
      <h1><%= @product.item %></h1>
      <h2>Price: <h2>
          <p>
          <% if @product.condition == "good" %>
              <%= number_to_currency @product.price.to_i * 0.9 %> CLEARANCE!!!

          <% elsif @product.condition == "average" %>
                <%= number_to_currency @product.price.to_i * 0.8 %>  CLEARANCE!!!

          <% else %>
                <%= number_to_currency @product.price %>

          <% end %>
          </p>
      <% else %>



    <h3>Description: <%= @product.description%></h3>
    <h3>Dimensions:
        <p>Weight: <%= @product.dimension_w%></p>
        <p>Length: <%= @product.dimension_l%></p>
        <p>Height: <%= @product.dimension_h%></p>
      </h3>
      </div>
  </div>
</div>
